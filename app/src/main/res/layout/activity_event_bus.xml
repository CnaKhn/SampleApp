<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EventBusExample.EventBusActivity"
    android:padding="16dp">

    <EditText
        android:id="@+id/input_event_bus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Result appear here" />

    <Button
        android:id="@+id/btn_event_bus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Launch Child Activity"
        android:layout_below="@id/input_event_bus"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"/>

</RelativeLayout>