<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground">

    <TextView
        android:id="@+id/tv_first_char"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="12dp"
        android:paddingStart="20dp"
        android:paddingTop="16dp"
        android:paddingEnd="20dp"
        android:paddingBottom="16dp"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:text="S" />

    <View
        android:id="@+id/line"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_alignTop="@id/tv_first_char"
        android:layout_alignBottom="@id/tv_first_char"
        android:layout_toEndOf="@id/tv_first_char"
        android:background="@color/white" />

    <TextView
        android:id="@+id/tv_full_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/line"
        android:layout_alignBottom="@id/line"
        android:layout_marginStart="24dp"
        android:layout_toEndOf="@id/line"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="16sp"
        tools:text="Sina Khanbabaei" />

</RelativeLayout>